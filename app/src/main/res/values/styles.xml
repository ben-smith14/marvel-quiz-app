<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/marvelRed</item>
        <item name="colorPrimaryDark">@color/marvelRedDark</item>
        <item name="colorAccent">@color/marvelRed</item>
        <item name="colorButtonNormal">@color/marvelRed</item>
    </style>

    <style name="MainTitleText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/marvelRed</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="QuestionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="QuestionText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ScoreText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CorrectAnswerText">
        <item name="android:textColor">@color/correctGreen</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
